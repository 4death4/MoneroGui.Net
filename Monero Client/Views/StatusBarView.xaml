<UserControl x:Class="MoneroClient.Views.StatusBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StatusBar Grid.Row="2">
        <StatusBar.ItemsPanel>
            <ItemsPanelTemplate>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </ItemsPanelTemplate>
        </StatusBar.ItemsPanel>

        <StatusBarItem Content="Syncing with network..."/>
        <StatusBarItem Grid.Column="1" HorizontalContentAlignment="Stretch">
            <ProgressBar Value="33.33" Height="18"/>
        </StatusBarItem>
        <StatusBarItem Grid.Column="2" Content="0 connections"/>
        <StatusBarItem Grid.Column="3" Content="Out of date"/>
    </StatusBar>
</UserControl>
