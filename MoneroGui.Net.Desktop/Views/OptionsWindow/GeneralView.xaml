<UserControl x:Class="Jojatekok.MoneroGUI.Views.OptionsWindow.GeneralView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel>
        <CheckBox x:Name="CheckBoxIsUpdateCheckEnabled" Margin="0 0 0 8">
            <TextBlock TextWrapping="Wrap">
                <TextBlock Text="{Binding Path=OptionsGeneralIsUpdateCheckEnabled, Source={StaticResource Resources}}"/>
                <LineBreak/>
                <CheckBox x:Name="CheckBoxIsUpdateCheckForTestBuildsEnabled" Content="{Binding Path=OptionsGeneralIsUpdateCheckForTestBuildsEnabled, Source={StaticResource Resources}}" IsEnabled="{Binding ElementName=CheckBoxIsUpdateCheckEnabled, Path=IsChecked}" Margin="0 3 0 0"/>
            </TextBlock>
        </CheckBox>
        <CheckBox x:Name="CheckBoxIsStartableOnSystemLogin" Content="{Binding Path=OptionsGeneralIsStartableOnSystemLogin, Source={StaticResource Resources}}" Margin="0 0 0 8"/>
        <CheckBox x:Name="CheckBoxIsUriAssociationCheckEnabled" Margin="0 0 0 8">
            <TextBlock Text="{Binding Path=OptionsGeneralIsUriAssociationCheckEnabled, Source={StaticResource Resources}}" TextWrapping="Wrap"/>
        </CheckBox>
        <CheckBox x:Name="CheckBoxIsSafeShutdownEnabled" Content="{Binding Path=OptionsGeneralIsSafeShutdownEnabled, Source={StaticResource Resources}}"/>
    </StackPanel>
</UserControl>
