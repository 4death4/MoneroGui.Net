<UserControl x:Class="Jojatekok.MoneroGUI.Controls.ImageTextComposition"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Jojatekok.MoneroGUI.Controls"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <StackPanel Orientation="Horizontal">
        <controls:ImageGreyable x:Name="Image" Height="14"/>
        <TextBlock Text="{Binding Path=Text, Mode=OneWay}" VerticalAlignment="Center" Margin="4 0 0 0"/>
    </StackPanel>
</UserControl>
