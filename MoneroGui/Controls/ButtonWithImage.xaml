<UserControl x:Class="Jojatekok.MoneroGUI.Controls.ButtonWithImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Jojatekok.MoneroGUI.Controls">
    <Button Click="Button_Click">
        <StackPanel Orientation="Horizontal">
            <controls:ImageGreyable x:Name="Image" Margin="0 2 4 2"/>
            <TextBlock x:Name="TextBlock" VerticalAlignment="Center"/>
        </StackPanel>
    </Button>
</UserControl>
