<UserControl x:Class="Jojatekok.MoneroGUI.Views.OptionsWindow.PathSelectorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="8"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBox Grid.Column="0" x:Name="TextBoxPath"/>
        <Button Grid.Column="2" Content="..." Click="ButtonSelectPath_Click"/>
    </Grid>
</UserControl>
