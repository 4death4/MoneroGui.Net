<UserControl x:Class="Jojatekok.MoneroGUI.Views.TransactionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:p="clr-namespace:Jojatekok.MoneroGUI.Properties"
             xmlns:views="clr-namespace:Jojatekok.MoneroGUI.Views">
    <UserControl.DataContext>
        <views:TransactionsViewModel x:Name="ViewModel"/>
    </UserControl.DataContext>

    <Grid>
        <DataGrid ItemsSource="{Binding DataSource}" AutoGenerateColumns="False" IsReadOnly="True" HeadersVisibility="Column">
            <DataGrid.Columns>
                <!-- TODO: Fix column data (Status, date, type, address, amount) -->
                <DataGridTextColumn/>
                <!--<DataGridTextColumn Header="Date" Binding="{Binding Date}" SortDirection="Descending"/>-->
                <DataGridTextColumn Header="{x:Static p:Resources.TransactionsType}" Binding="{Binding Type}"/>
                <!--<DataGridTextColumn Header="{x:Static p:Resources.TextAddress}" Binding="{Binding Address}"/>-->
                <DataGridTextColumn Header="{x:Static p:Resources.TextAmount}" Binding="{Binding Amount}"/>

                <DataGridTextColumn Header="Transaction ID" Binding="{Binding TransactionId}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
