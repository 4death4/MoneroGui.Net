<UserControl x:Class="Jojatekok.MoneroGUI.Views.MainWindow.StatusBarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:Jojatekok.MoneroGUI.Views.MainWindow">
    <UserControl.DataContext>
        <views:StatusBarViewModel x:Name="ViewModel"/>
    </UserControl.DataContext>

    <StatusBar Padding="3 0">
        <StatusBar.ItemsPanel>
            <ItemsPanelTemplate>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </ItemsPanelTemplate>
        </StatusBar.ItemsPanel>

        <StatusBarItem Grid.Column="0" Visibility="{Binding Path=SyncStatusVisibility}">
            <Image Source="/Resources/Images/Synchronize.png" Style="{StaticResource StyleAnimationSpinner}"/>
        </StatusBarItem>
        <StatusBarItem Grid.Column="1" Content="{Binding Path=StatusBarStatusSynchronizing, Source={StaticResource Resources}}" Visibility="{Binding Path=SyncStatusVisibility}"/>
        <StatusBarItem Grid.Column="2" HorizontalContentAlignment="Stretch" Visibility="{Binding Path=SyncStatusVisibility}">
            <Grid Margin="3 0">
                <ProgressBar Value="{Binding Path=SyncBarProgressPercentage}" Maximum="1" Height="21"/>
                <TextBlock Text="{Binding Path=SyncBarText}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </StatusBarItem>

        <Separator Grid.Column="3" Style="{StaticResource StyleSeparatorVertical}" Visibility="{Binding Path=SyncStatusVisibility}" Margin="5"/>
        <StatusBarItem Grid.Column="4">
            <TextBlock>
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}{0} {1}">
                        <Binding Path="ConnectionCount"/>
                        <Binding Path="StatusBarConnections" Source="{StaticResource Resources}"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
        </StatusBarItem>
        <StatusBarItem Grid.Column="5">
            <Image Source="{Binding Path=ConnectionCountIndicatorImageUri, IsAsync=True}"/>
        </StatusBarItem>
    </StatusBar>
</UserControl>
